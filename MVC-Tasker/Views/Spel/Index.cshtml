                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Token)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BordJson)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AandeBeurt)
            </td>
